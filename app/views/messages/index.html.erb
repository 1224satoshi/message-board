<div class="panel panel-info">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message, :html =>{:class=>"form-horizonal" })  do |f| %>
  <div class="form-group">
    
   <label for="message_name" class="col-sm-2 control-label">名前:
   </label>   
   <div class="col-sm-10">
       <%= f.text_field :name , :placeholder => "Input your name" %>
   </div>
  </div>
 <br>
  <div class="form-group">
   <label for="message_body" class="col-sm-2 control-label">内容:
   </label>
   <div class="col-sm-10">
     <%= f.text_area :body , :placeholder => "Write your message!" %>  
   </div>
  </div>
 <br>
 <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>